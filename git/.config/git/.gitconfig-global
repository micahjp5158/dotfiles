########################################################################
#
#	gitconfig-global
#
# 	Git configurations intended for use across multiple machines.
# 	To use, include this file in your local .gitconfig with the command:
#
#	git config --global --add include.path = "~/.config/git/.gitconfig-global"
#
########################################################################

[core]
	# Set vim as the default text editor
	editor = vim

[commit]
	# Use the git commit message template from the dotfiles repo
	template = ~/.config/git/.gitmessage

[advice]
	# Ignore help messages when ignored files aren't added to commits
	addIgnoredFile = false
